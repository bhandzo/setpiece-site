---
import { menuLinks, siteConfig } from "@/site.config";

const year = new Date().getFullYear();
---

<footer class="gc-full grid-local">
  <div class="gc-full md:gc-half lg:gc-third">
    &copy; {siteConfig.author}
    {year}.<span class="inline-block">&nbsp;ðŸš€&nbsp;{siteConfig.title}</span>
  </div>
  <nav
    aria-labelledby="footer_links"
    class="gc-full md:gc-half lg:gc-two-thirds flex gap-x-2 sm:gap-x-0 sm:divide-x sm:divide-gray-500"
  >
    <p id="footer_links" class="sr-only">More on this site</p>
    {
      menuLinks.map((link) => (
        <a
          class="hover:text-global-text px-4 py-2 hover:underline sm:py-0"
          href={link.path}
        >
          {link.title}
        </a>
      ))
    }
  </nav>
</footer>
